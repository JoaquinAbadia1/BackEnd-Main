<div>
  <h1>Agregar un nuevo producto</h1>
  <form id="productForm" method="post" action="/realtime">
    <label for="productTitle">Título:</label>
    <input
      type="text"
      id="productTitle"
      name="title"
      placeholder="Título del producto"
    />

    <label for="productDescription">Descripción:</label>
    <textarea
      id="productDescription"
      name="description"
      placeholder="Descripción del producto"
    ></textarea>

    <label for="productPrice">Precio:</label>
    <input
      type="number"
      id="productPrice"
      name="price"
      step="0.01"
      placeholder="Precio del producto"
    />

    <label for="productThumbnail">Thumbnail:</label>
    <input
      type="text"
      id="productThumbnail"
      name="thumbnail"
      placeholder="URL del thumbnail"
    />

    <label for="productCode">Código:</label>
    <input
      type="text"
      id="productCode"
      name="code"
      placeholder="Código del producto"
    />

    <label for="productStock">Stock:</label>
    <input
      type="number"
      id="productStock"
      name="stock"
      placeholder="Stock del producto"
    />

    <script>
      function refrescarPagina() { location.reload(); }
    </script>
    <button type="submit" onclick="refrescarPagina()">Agregar</button>
  </form>

  <div class="contenedor">

    {{#each products}}

      <div class="card">
        <img src="{{thumbnail}}" class="card-img-top" alt="{{title}}" />
        <div class="card-body">
          <h5 class="card-title">{{title}}</h5>
          <p class="card-text">{{description}}</p>
          <p>{{price}}</p>
          <p>stock: {{stock}}</p>
          <p>Código del producto: {{code}}</p>
          <p>Precio: U$D {{price}}</p>
          <button class="btnEliminar" data-id="{{id}}">Eliminar</button>
        </div>
      </div>
    {{/each}}
  </div>
</div>
